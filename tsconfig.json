{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "types": []
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
    ],
    "exclude": [
        "node_modules",
        "packages"
    ],
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    }
}
